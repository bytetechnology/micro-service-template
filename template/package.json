{
  "name": "micro-{{serviceName}}",
  "version": "0.0.1",
  "description": "{{serviceName}} microservice",
  "main": "dist/api",
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "check": "npm run lint && npm run format && npm run build && npm run test && npm run docs && npm run cli-test",
    "cli-test": "cross-env ENV_FILE=envs/local.test.env BLUEBIRD_W_FORGOTTEN_RETURN=0  ts-node --files src/main.ts",
    "dev": "cross-env ENV_FILE=envs/local.dev.env  BLUEBIRD_W_FORGOTTEN_RETURN=0  ts-node --files src/main.ts",
    "debug": "cross-env ENV_FILE=envs/local.dev.env TS_NODE_FILES=true node --inspect-brk -r ts-node/register src/main.ts",
    "docs": "typedoc --theme markdown --out apidocs src",
    "format": "prettier --write \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "lint": "eslint --fix \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "start": "cross-env  NODE_ENV=production  node dist/main.js",
    "test": "cross-env  ENV_FILE=envs/local.test.env  jest --coverage --runInBand"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "Byte Technology",
  "devDependencies": {
    "@types/jest": "26.0.10",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.160",
    "@types/mongodb": "3.5.26",
    "@types/node": "14.6.0",
{{#if sql}}
    "@types/uuid": "8.3.0",
{{/if}}
{{#if mongo}}
    "mongodb-memory-server": "6.6.6",
{{/if}}    
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "cross-env": "7.0.2",
    "eslint": "7.7.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.4.2",
    "jest-extended": "0.11.5",
    "moleculer-repl": "0.6.4",
    "prettier": "2.1.1",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "typedoc": "0.18.0",
    "typedoc-plugin-markdown": "2.4.2",
    "typescript": "4.0.2",
    "utility-types": "3.10.0"
  },
  "dependencies": {
    "@casl/ability": "4.1.5",
    "amqplib": "0.6.0",
    "dotenv": "8.2.0",
    "joiful": "2.0.1",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
{{#if needDb}}    
    "@mikro-orm/cli": "4.0.7",
    "@mikro-orm/core": "4.0.7",
{{/if}}
    "moleculer": "0.14.10",
    "moleculer-context-db": "1.0.1",
    "moleculer-decorators": "1.3.0",
    "moleculer-service-ts": "1.0.8",
    "moment": "2.27.0",
{{#if mongo}}
    "@mikro-orm/mongo": "4.0.7",
{{/if}}    
    "notepack.io": "2.3.0",
    "pg": "8.3.3",
    "pkg-dir": "4.2.0",
    "reflect-metadata": "0.1.13",
{{#if sql}}
    "@mikro-orm/postgresql": "4.0.7",
    "@mikro-orm/sqlite": "4.0.7",
{{/if}}
    "thunky": "1.1.0",
{{#if sql}}
    "uuid": "8.3.0",
{{/if}}
    "winston": "3.3.3",
    "winston-gelf-transporter": "1.0.2"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
{{#if mongo}}
  "config": {
    "mongodbMemoryServer": {
      "version": "4.2.5"
    }
  },
{{/if}}
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "coverageDirectory": "tests/coverage",
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "roots": [
      "./tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testTimeout": 60000,
    "setupFilesAfterEnv": [
      "jest-extended",
      "./tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "restoreMocks": true,
    "clearMocks": true,
    "resetMocks": true
  }
}
